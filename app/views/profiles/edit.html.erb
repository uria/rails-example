<% semantic_form_for @profile, :url => {:controller => :profiles, :action => :update} do |f| -%>
<%= f.input :marital_status, :label => "Status" %>
<%= f.input :height, :as => :select, :collection => (140..230).to_a %>
<%= f.input :body_type %>
<%= f.input :smoker, :as => :select %>
<%= f.input :about_me, :label => "About me" %>
<%= f.input :what_i_look_for, :label => "What I am looking for" %>
<%= f.commit_button %>
<% end -%>

